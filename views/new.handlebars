<div class="container">
  <form action="/record" method="post">
    <li class="input-group">
    <li class="form-group mb-3">
      <label for="name">名稱</label>
      <input type="text" id="name" name="name" class="form-control" placeholder="名稱">
    </li>
    <li class="form-group mb-3">
      <label for="date">消費日期</label>
      <input type="date" id="date" name="date" class="form-control" placeholder="消費日期">
    </li>
    <li class="form-group mb-3">
      <label for="category">消費類別</label>
      <select name="category" id="category" style="width: 100%;">
        <option>消費類別</option>
        <option value="home">家居物業</option>
        <option value="transportation">交通出行</option>
        <option value="entertainment">休閒娛樂</option>
        <option value="food">餐飲食品</option>
      </select>
    </li>
    <li class="form-group mb-3">
      <label for="date">價格</label>
      <input type="number" id="amount" name="amount" class="form-control" placeholder="價格">
    </li>
    <div class="button" style="display: flex; justify-content:space-between">
      <button class="btn btn-primary" type="submit">Create</button>
      <a class="btn btn-success" href="/">back</a>
    </div>
  </form>
</div>