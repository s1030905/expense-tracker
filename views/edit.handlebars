<div class="container">
  <form action="/record/{{record._id}}?_method=PUT" method="POST">
    <ul style="list-style-type: none;">
      <li class="form-group mb-3">
        <label for="name">名稱</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="名稱" value="{{record.name}}" required>
      </li>
      <li class="form-group mb-3">
        <label for="date">消費日期</label>
        <input type="date" id="date" name="date" class="form-control" placeholder="消費日期" value="{{date}}" required>
      </li>
      <li class="form-group mb-3">
        <label for="category">消費類別</label>
        <select name="category" id="category" style="width: 100%;" required>
          <option disabled selected>消費類別</option>
          <option value="1">家居物業</option>
          <option value="2">交通出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option>
        </select>
      </li>
      <li class="form-group mb-3">
        <label for="date">價格</label>
        <input type="number" id="amount" name="amount" class="form-control" placeholder="價格" value="{{record.amount}}"
          required>
      </li>
    </ul>
    <div class="button" style="display: flex; justify-content:space-between">
      <button class="btn btn-primary" type="submit">Submit</button>
      <a class="btn btn-success" href="/">back</a>
    </div>
  </form>
</div>